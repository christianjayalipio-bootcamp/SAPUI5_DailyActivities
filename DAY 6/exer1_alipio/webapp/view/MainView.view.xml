<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    controllerName="com.training.exer1alipio.controller.MainView"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
        floatingFooter="true"
    >
        <content>
            <VBox
                id="idVBox"
                class="sapUiSmallMargin"
            >
                <f:SimpleForm
                    id="idSimpleForm"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="Details"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label
                            id="idLblFName"
                            text="{i18n>firstNameLbl}"
                        />

                        <Input id="idInptFName" />

                        <Label
                            id="idLblLName"
                            text="{i18n>lastNameLbl}"
                        />

                        <Input id="idInptLName" />

                        <Label
                            id="idLblMOP"
                            text="{i18n>modePaymentLbl}"
                        />

                        <Select
                            id="idSelMOP"
                            forceSelection="false"
                            change="onChangeMOP"
                        >
                            <items>
                                <core:Item
                                    id="idItmCOD"
                                    text="{i18n>codLbl}"
                                    key="COD"
                                />

                                <core:Item
                                    id="idItmCC"
                                    text="{i18n>ccardLbl}"
                                    key="CC"
                                />

                                <core:Item
                                    id="idItmGCash"
                                    text="{i18n>gcashLbl}"
                                    key="GCASH"
                                />
                            </items>
                        </Select>

                        <Label
                            id="idLblPhone"
                            text="{i18n>mnoLbl}"
                            visible="false"
                        />
                        <Input
                            id="idInputPhone"
                            value=""
                            visible="false"
                        />
                        <Label 
                            id="idLblCC"
                            text="{i18n>ccdetailsLbl}"
                            visible="false"
                        />
                        <Input 
                            id="idInputCC"
                            value=""
                            visible="false"
                        />
                    </f:content>
                </f:SimpleForm>
                
                <core:Fragment fragmentName="com.training.exer1alipio.fragment.ShoppingCart" type="XML" />
                
            </VBox>
        </content>

        <footer>
            <OverflowToolbar id="idOFTFooter">
                <ToolbarSpacer id="idTSpacerFooter" />

                <Button
                    id="idBtnCheckout"
                    text="{i18n>checkoutLbl}"
                    tooltip="Check Out"
                    press="onPressCheckout"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
