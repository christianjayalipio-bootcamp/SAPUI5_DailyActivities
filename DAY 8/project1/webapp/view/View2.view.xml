<mvc:View
    controllerName="com.ui5.trng.project1.controller.View2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="page1"
        title="{i18n>title1}"
        class="myBackgroundPage"
    >
        <customHeader>
            <Bar class="customHeader">
                <contentLeft>
                    <Title class="myTitle" text="Custom Header Title 1" />
                </contentLeft>
            </Bar>
        </customHeader>
        <footer>
            <Bar class="customHeader1">
                <contentLeft>
                    <Button
                        icon="sap-icon://message-popup"
                        text="Message"
                        press="onButton1Press"
                        type="Accept"
                    />
                </contentLeft>
                <contentRight>
                    <Button
                        text="Back"
                        press="onNavBack"
                        type="Attention"
                    />
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>
