<mvc:View
    controllerName="com.ui5.trng.project1.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
        class="myBackgroundPage"
    >
        <customHeader>
            <Bar class="customHeader" id="bar0">
                <contentLeft>
                    <Title id="title0" class="myTitle" text="{i18n>title}" />
                </contentLeft>
            </Bar>
        </customHeader>

        <content></content>

        <footer>
            <Bar id="bar1" class="customFooter">
                <contentLeft>
                    <Button
                        id="btn0"
                        icon="sap-icon://message-popup"
                        text="Message"
                        press="onButton1Press"
                        type="Accept"
                    />
                </contentLeft>
                <contentRight>
                    <Button
                        id="btn1"
                        icon="sap-icon://navigation-right-arrow"
                        text="Next"
                        press="onNavPress"
                        iconFirst="false"
                        type="Attention"
                    />
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>
